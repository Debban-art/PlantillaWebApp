using System;
using System.Collections;
using System.Data;
using System.Data.SqlClient;
using reportesApi.DataContext;
using reportesApi.Models;

namespace reportesApi.Services
{
    public class PersonasService
    {
        private  string connection;
        
        
        public PersonasService(IMarcatelDatabaseSetting settings)
        {
             connection = settings.ConnectionString;
        }

        public PersonaModel Login(string user, string pass)
        {
            
            PersonaModel persona= new PersonaModel();
            ConexionDataAccess dac = new ConexionDataAccess(connection);
            try
            {
                ArrayList parametros = new ArrayList();
                parametros.Add(new SqlParameter { ParameterName = "@pUsuario", SqlDbType = SqlDbType.VarChar, Value = user });
                parametros.Add(new SqlParameter { ParameterName = "@pPass", SqlDbType = SqlDbType.VarChar, Value = pass });
                DataSet ds = dac.Fill("Get_Personas", parametros);
                if (ds.Tables[0].Rows.Count > 0)
                {
                    foreach (DataRow row in ds.Tables[0].Rows)
                    {
                        Persona.Nombre = row["Nombre"].ToString();
                        Persona.ApellidoMaterno= row["ApellidoMaterno"].ToString();
                        Persona.ApellidoPaterno = int.Parse(row["ApellidoPaterno"].ToString());
                        Persona.Direccion = row["Direccion"].ToString();
                        Persona.Id = int.Parse(row["Id"].ToString());
                        
                    
                    }
                }
               
            }
           
           
        }
    }
}
